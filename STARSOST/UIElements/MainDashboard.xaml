<UserControl x:Class="STARSOST.UIElements.MainDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:STARSOST.UIElements"
             mc:Ignorable="d" 
             >
    <DockPanel>
        <Label DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Center" 
               Content="STARS Offline Support Tools Dashboard" Foreground="White"
               FontSize="36" FontFamily="Times New Roman">
            <Label.Effect>
                <DropShadowEffect/>
            </Label.Effect>
        </Label>
        <UniformGrid Rows="2" Columns="3">
            <local:DashboardButton Text="Import Reports/Logs"/>
            <local:DashboardButton Text="System Event Logs"/>
            <local:DashboardButton Text="Parrot/PE Reports"/>
            <local:DashboardButton Text="Sensor Registration Reports"/>
            <local:DashboardButton Text="RTQC Reports"/>
            <local:DashboardButton Text="Target Summary Reports"/>

        </UniformGrid>
    </DockPanel>
</UserControl>
